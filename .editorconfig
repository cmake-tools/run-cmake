root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_trailing_newline = true

[*.md]
trim_trailing_whitespace = false

[/dist/**]
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_size = unset